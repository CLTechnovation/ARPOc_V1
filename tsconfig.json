{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src", 
    "target": "es5"
  },
  "include": [
    "src/**/*.ts","src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "src/pages/ar-view/*.ts",
    "src/app/WikitudePlugin.d.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}